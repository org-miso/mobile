<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAlbum"
        android:layout_marginTop="270dp"
        android:layout_width="365dp"
        android:layout_height="130dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewImage"
                        android:layout_width="120dp"
                        android:layout_height="131dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:cardPreventCornerOverlap="false"
                        android:layout_marginBottom="40dp">

                        <ImageView
                            android:id="@+id/imageAlbum"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginRight="-10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/buscando"
                            android:contentDescription="@string/cover_image"
                            />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="10sp"
                        android:layout_marginBottom="10sp"
                        >

                        <TextView
                            android:id="@+id/textViewAlbum"
                            android:text="Nombre del Almbun"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#31C5D2"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            />

                        <TextView
                            android:text="2022"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#555555"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/yearViewAlbum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:text="DescripciÃ³n: Lorem impusn"
                            android:textSize="10sp"
                            android:textColor="#555555"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>